<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="General">
        <ListPreference
                android:key="default-dyke"
                android:icon="@drawable/ic_waves_black_24dp"
                android:title="Default dyke"
                android:summary="Choose the default dyke for new reports"
                android:dialogTitle="Choose dyke"
                android:entries="@array/report_spinner_deformationtype_values"
                android:entryValues="@array/report_spinner_deformationtype_values"
        />
    </PreferenceCategory>

    <PreferenceCategory android:title="Connectivity">
        <SwitchPreference
                android:key="use-cellular-for-positioning"
                android:icon="@drawable/ic_my_location_black_24dp"
                android:title="Cellular positioning"
                android:summary="Support position determination with cellular network"
        />
    </PreferenceCategory>

    <PreferenceCategory android:title="Sync">
        <SwitchPreference
                android:key="sync-data-on-startup-if-network-available"
                android:icon="@drawable/ic_sync_black_24dp"
                android:title="Sync on startup"
                android:summary="Synchronizes report and dyke data on startup when a network is available"
        />
        <Preference
                android:key="sync-data-now"
                android:icon="@drawable/ic_update_black_24dp"
                android:title="Sync now"
                android:summary="Last sync: 20.05.2019 16:42"
        />
    </PreferenceCategory>

    <PreferenceCategory android:title="About">
        <Preference
                android:title="Creator"
                android:summary="FESTIVAL Development"
        />

        <Preference
                android:title="App Version"
                android:summary="1.0.0"
        />
    </PreferenceCategory>
</PreferenceScreen>